generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Post {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  slug      String    @unique
  title     String
  body      String
  authorsId String[]
  comments  Comment[]
  feedback  Feedback
}

model Comment {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  post     Post   @relation(fields: [postId], references: [id])
  postId   String @db.ObjectId
  body     String
  authorId String
}

type Feedback {
  likes    Int @default(0)
  dislikes Int @default(0)
}
